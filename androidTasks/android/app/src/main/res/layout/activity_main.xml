<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="100dp"
    android:paddingTop="80dp"
    android:paddingRight="100dp"
    android:paddingBottom="50dp"
   >

    <!-- Login -->
    <TextView
        android:id="@+id/login_word"
        style="@style/AppTheme.TextViewStyle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="LOGIN"
        android:textColor="#3F51B5"
        android:textFontWeight="800"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/emaillabel"
        style="@style/AppTheme.TextViewStyle"
        android:layout_below="@+id/login_word"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:text="Email"
        android:textColor="#2196F3"
        android:textFontWeight="500"
        android:textSize="25dp" />
    <!-- Email -->
    <EditText
        android:id="@+id/emailEditText"
        style="@style/AppTheme.EditTextStyle"
        android:layout_below="@+id/emaillabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:height="50dp"
        android:background="@drawable/edit_text_border"
        android:hint="Email"
        android:padding="5dp" />


    <!-- Password -->
    <TextView
        android:id="@+id/passwordlabel"
        style="@style/AppTheme.TextViewStyle"
        android:layout_below="@+id/emailEditText"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Password"
        android:textColor="#2196F3"
        android:textFontWeight="500"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/passwordEditText"
        style="@style/AppTheme.EditTextStyle"
        android:layout_below="@+id/passwordlabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:height="100dp"
        android:background="@drawable/edit_text_border"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <!-- Remember Me Checkbox -->
    <CheckBox
        android:id="@+id/rememberMeCheckbox"
        style="@style/AppTheme.CheckBoxStyle"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:textSize="15dp"
        android:textColor="#2196F3"/>


    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        style="@style/AppTheme.ButtonStyle"
        android:layout_below="@+id/rememberMeCheckbox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="50dp"
        android:background="#2196F3"
        android:textSize="20dp"
        android:textFontWeight="700"
        android:radius="10dp"
        />

    <!-- Forget Password Link -->
    <TextView
        android:id="@+id/forgetPasswordLink"
        style="@style/AppTheme.TextViewStyle"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:text="Forget Password?"
        android:textColor="#2196F3"
        android:textSize="20dp"/>

    <!-- "or" Word -->
    <Button
        android:id="@+id/orTextView"
        style="@style/AppTheme.TextViewStyle"
        android:layout_below="@+id/forgetPasswordLink"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="150dp"
        android:text="or"
        />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpLink"
        android:layout_below="@+id/orTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">
        <!-- Google Logo -->
        <ImageView
            android:id="@+id/googleLogo"
            style="@style/AppTheme.ImageViewStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/orTextView"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/google_logo" />

        <!-- Facebook Logo -->
        <ImageView
            android:id="@+id/facebookLogo"
            style="@style/AppTheme.ImageViewStyle"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@+id/googleLogo"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/facebook_logo" />

        <!-- LinkedIn Logo -->
        <ImageView
            android:id="@+id/linkedinLogo"
            style="@style/AppTheme.ImageViewStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/facebookLogo"
            android:layout_marginTop="8dp"
            android:src="@drawable/linkedin_logo" />

    </LinearLayout>
    <!-- Sign Up Link -->
    <TextView
        android:id="@+id/signUpLink"
        style="@style/AppTheme.TextViewStyle"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="10dp"
        android:text="Don't have an account? Sign Up"
        android:textSize="15dp" />

</RelativeLayout>
