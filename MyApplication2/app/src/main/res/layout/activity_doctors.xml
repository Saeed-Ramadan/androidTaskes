<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="80dp"
    android:background="@drawable/pr">


    <ImageView
        android:id="@+id/doctorImageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/profileimage"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/doctorNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دكتورة ايمان محمود"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@color/cardview_dark_background"/>


    <TextView
        android:id="@+id/doctorSpecialtyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اختصاص: جراحة القلب"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textColor="@color/profile"/>


    <RatingBar
        android:id="@+id/doctorRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="4.5"
        android:stepSize="0.5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/doctorBioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تعتبر دكتورة ايمان محمود واحدًه من أفضل جراحي القلب في البلاد. لديها خبرة واسعة في إجراء عمليات جراحية معقدة وناجحة."
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"/>

</LinearLayout>
